---
import { Image } from "astro:assets"
import H1 from "./H1.astro"
---

<section
  class="flex animate-fade-up flex-col items-center gap-8 text-center sm:flex-row sm:text-left"
  style={{ animationDelay: "0.20s", animationFillMode: "both" }}
>
  <div class="flex flex-col gap-2">
    <H1>Olajide Abdullateef</H1>
    <p class="text-base text-foreground/75 sm:text-xl">
      Data Engineer | Data Analyst
    </p>
  </div>

  <Image
    src="/logo.png"
    alt="Profile Image"
    width={150}
    height={150}
    class="rounded-full"
    quality="max"
    format="png"
  />
</section>
